@model TejInfraFollowUp.Models.EmployeeLead

@{
    ViewBag.Title = "GetEmployeeLeadList";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title"></h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Lead</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Lead List </li>
                        </ol>
                    </nav>
                </div>
            </div>

        </div>
    </div>
    @using (Html.BeginForm("GetEmployeeLeadList", "EmployeeLead", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
    {
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background: url(../../assets/images/big/auth-bg.jpg) no-repeat center center;min-height: 55vh;display: table-cell;">
            <div class="auth-box" style="max-width:1286px;margin:2%">
                <div id="loginform">
                    <div class="logo">

                        <p class="font-medium m-b-20" style="color:red">@TempData["Error"]</p>
                    </div>
                </div>
                <br />
                <div class="table-responsive">
                    <table id="file_export" class="table table-striped table-bordered display">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Contact Person</th>
                                <th>FirstDateOfInteeraction</th>
                                <th>Expected Product Category</th>
                                <th>Data Source</th>
                                <th>Executive Name</th>
                                <th>Mode Of Interaction</th>
                                <th>FollowUp Date</th>
                                <th>Description </th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstLead != null)
                                {
                                    foreach (var item in Model.lstLead)
                                    {
                                        <tr>
                                            @Html.HiddenFor(m => m.Pk_LeadeId)
                                            <td>
                                                <a href="/EmployeeLead/DeleteLead?Pk_LeadeId=@item.Pk_LeadeId" class="label label-primary" onclick="return confirm('Are you want to delete?;')">Delete</a>
                                                &nbsp;

                                            </td>

                                            <td>@item.Fk_ProcpectId</td>
                                            <td>@item.FirstInstructionDate</td>
                                            <td>@item.Fk_ExpectedProductCategoryId</td>
                                            <td>@item.Fk_SourceId</td>
                                            <td>@item.Fk_ExecutiveId</td>
                                            <td>@item.Fk_ModeInterActionId</td>
                                            <td>@item.FollowupDate</td>
                                            <td>@item.Description</td>



                                        </tr>
                                    }
                                }
                            }

                        </tbody>
                    </table>
                </div>







            </div>
        </div>
       
    }

    </div>