    <script>
        $(document).ready(function () {
            var dd = $("#EmailBodyHTML").val();
            document.getElementById('emailbody').innerHTML = dd;

            $('#emailbody').summernote(
            {
                height: 150,
                toolbar: [
                  // [groupName, [list of button]]
                  ['style', ['bold', 'italic', 'underline', 'clear']],
                  ['font', ['strikethrough', 'superscript', 'subscript']],
                  ['fontsize', ['fontsize']],
                  ['para', ['ul', 'ol', 'paragraph']],
                  ['height', ['height']]
                ]
            });

            $("#divload").css({ 'display': 'none' });

            var senderemail = [];
            $.ajax({
                url: '/Admin/GetSenderEmails',
                type: 'Post',
                success: function (response) {
                    if (response != null) {
                        $(response).each(function (index, item) { // GETTING ERROR HERE
                            senderemail.push(item.SenderEmail + "(" + item.SenderPassword + ")");
                        });

                        $('#SenderEmailDisplay').autocomplete({
                            source: senderemail,
                            select: function (event, ui) {
                                var str = ui.item.label;
                                var semail = str.split("(");
                                var afterComma = str.substr(str.indexOf("(") + 1);
                                var citycode = afterComma.substr(0, afterComma.length - 1);
                                $('#SenderEmail').val(semail[0]);
                                //alert(semail[0]);
                                $('#SenderPassword').val(citycode);
                            }
                        })
                    }
                    else {

                    }
                }, error: function () { alert('Some Thing wrong!'); }
            });

        })

        function templateChange() {
            var templateID = $('#PK_TemplateID').val();

            $.ajax({
                url: '/Admin/TemplateChange', type: 'post', dataType: 'json',
                data: { 'tid': templateID },
                success: function (data) {
                    $("#divload").css({ 'display': 'none' });
                    if (data.Result == "1") {
                        $('#Subject').val(data.Subject);
                        $('#EmailBodyHTML').val(data.Body);
                        $('#postedfile').val(data.SelectedFilePath);

                        var dd = $("#EmailBodyHTML").val();
                        document.getElementById('emailbody').innerHTML = dd;
                        document.getElementById('spTest').innerText = dd;
                    }
                    else {
                        alert(data.Result);
                    }
                }
            });
        }

        function validateForm() {
            var emailBodyHTML = $('#emailbody').summernote('code');
            $('#EmailBodyHTML').val(emailBodyHTML);

            $(".errortext").removeClass("errortext");
            if ($('#Subject').val() == '') {
                $("#Subject").addClass('errortext');
                $('#Subject').focus();
                return false;
            }
            if ($('#Body').val() == '') {
                $("#Body").addClass('errortext');
                $('#Body').focus();
                return false;
            }
            $("#divload").css({ 'display': '' });
        }
    </script>


