@model TejInfraFollowUp.Models.Customer

@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title"></h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Customer</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Customer List</li>
                        </ol>
                    </nav>
                </div>
            </div>

        </div>
    </div>
    @using (Html.BeginForm("CustomerList", "Customer", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
    {
        <div class="alert alert-success" style="display:@ViewBag.saverrormsg">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
            <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["CustomerDelete"]</h5>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Customer Name</label>
                                    <div class="col-md-9">
                                         @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control form-control-lg", @Placeholder = "Customer Name" })
                                    </div>
                                </div>
                            </div>
                             <div class="col-md-3">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Customer Code </label>
                                    <div class="col-md-9">
                                         @Html.TextBoxFor(m => m.CustomerCode, new { @class = "form-control form-control-lg", @Placeholder = "Customer Code" })
                                    </div>
                                </div>
                            </div>
                              <div class="col-md-3">
                                <div class="form-group row">

                                    <div class="col-md-9">
                                        <input type="submit" value="Get Details" class="btn btn-primary" name="GetDetails" />

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                           
                            <!--/span-->
                        </div>
                        
                        <div class="table-responsive">
                            <table id="file_export" class="table table-striped table-bordered display">
                                <thead>
                                    <tr>
                                         <th>Action</th>
                                        <th>Customer Code</th>
                                        <th>Customer Name</th>
                                       
                                        <th>Contact</th>
                                        <th>Email</th>
                                        <th>Nature</th>
                                        <th>Bank Details</th>
                                          <th>Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstcustomer != null)
                                        {
                                            foreach (var item in Model.lstcustomer)
                                            {
                                        <tr>
                                             <td>
                                                <a href="/Customer/AddCustomer?CustomerId=@item.CompanyId" class="label label-primary">Edit</a>
                                                &nbsp;
                                             <a href="/Customer/DeleteCustomer?CustomerId=@item.CompanyId" onclick="return confirm('Sure you want to delete this Customer ?');" class="label label-danger">Delete</a>
                                            </td>
                                            <td>@item.CustomerCode</td>
                                            <td>@item.CompanyName</td>
                                            <td>@item.MobileNo</td>
                                            <td>@item.Email</td>
                                            <td>@item.NatureOfBusiness</td>
                                           <td>@item.BankName @item.AccountNo @item.IFSCCode @item.BankAddress</td>
                                             <td>@item.Address @item.StateName @item.City @item.Pincode</td>
                                        </tr>
                                            }
                                        }
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Action</th>
                                        <th>Customer Code</th>
                                        <th>Customer Name</th>
                                       
                                        <th>Contact</th>
                                        <th>Email</th>
                                        <th>Nature</th>
                                        <th>Bank Details</th>
                                         <th>Address</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

