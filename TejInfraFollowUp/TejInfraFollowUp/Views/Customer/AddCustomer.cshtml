@model TejInfraFollowUp.Models.Customer

@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #f5c1cb !important;
    }
</style>
<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title"></h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Customer</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Customer</li>
                        </ol>
                    </nav>
                </div>
            </div>

        </div>
    </div>
    @using (Html.BeginForm("AddCustomer", "Customer", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
    {
        
        <div class="container-fluid">

            <div class="alert alert-success" style="display:@ViewBag.errormsg">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
                <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["CustomerError"]</h5>

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header bg-info">
                            <h4 class="m-b-0 text-white">Customer List
                                 <a href="/Customer/CustomerList" class="btn btn-success pull-right" style="margin-left: 82%;">Back To List</a>
                            </h4>

                        </div>

                        <div class="form-body">




                            <span style="color: red">Note : All fields which have star sign are mandatory.</span>
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Company Name <span style="color: red">*</span></label>
                                            <div class="col-md-12">
                                                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control form-control-lg", @Placeholder = "Company Name" })
                                                @Html.HiddenFor(m => m.CompanyId, new { @Placeholder = "Site Name" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->

                                    <!--/span-->
                                </div>
                                <!--/row-->
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Nature Of Business </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.NatureOfBusiness, new { @class = "form-control form-control-lg", @Placeholder = "Nature Of Business" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Company Mobile <span style="color: red">*</span></label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control form-control-lg", @Placeholder = "Company Mobile", onkeypress = "return isNumber(event);", @maxlength = "10" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Company Phone <span style="color: red">*</span></label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control form-control-lg", @Placeholder = "Company Phone", @onkeypress = "return isNumber(event);" })
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>
                                <!--/row-->

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Company Email <span style="color: red">*</span></label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @Placeholder = "Company Email" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Director Name  </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.DirectorName, new { @class = "form-control form-control-lg", @Placeholder = "Director Name" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Director Contact </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.DirectorContact, new { @class = "form-control form-control-lg", @Placeholder = "Director Contact", @onkeypress = "return isNumber(event);", @maxlength = "10" })
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Pincode <span style="color: red">*</span></label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control form-control-lg", @Placeholder = "Pincode", @onchange = "getstatecity();", @onkeypress = "return isNumber(event);", @maxlength = "6" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">State  <span style="color: red">*</span></label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.StateName, new { @class = "form-control form-control-lg", @Placeholder = "State", @readonly = "true" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">City <span style="color: red">*</span></label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.City, new { @class = "form-control form-control-lg", @Placeholder = "City", @readonly = "true" })
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Comapny Address <span style="color: red">*</span></label>
                                            <div class="col-md-12">
                                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-lg", @Placeholder = "Address" })
                                            </div>
                                        </div>
                                    </div>


                                    <!--/span-->
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Concern Person 1 </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.ConcertPerson1, new { @class = "form-control form-control-lg", @Placeholder = "Concern Person 1" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Concern Person 1 Contact  </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.ConcertPersonContact1, new { @class = "form-control form-control-lg", @Placeholder = "Concern Person 1 Contact", @onkeypress = "return isNumber(event);", @maxlength = "10" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Concern Person 2 </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.ConcertPerson2, new { @class = "form-control form-control-lg", @Placeholder = "Concern Person 2" })
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Concern Person 2 Contact </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.ConcertPersonContact2, new { @class = "form-control form-control-lg", @Placeholder = "Concern Person 2 Contact", @onkeypress = "return isNumber(event);", @maxlength = "10" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Bank Name  </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.BankName, new { @class = "form-control form-control-lg", @Placeholder = "Bank Name" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Account No </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.AccountNo, new { @class = "form-control form-control-lg", @Placeholder = "Account No", @onkeypress = "return isNumber(event);", @maxlength = "20" })
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">IFSC Code </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.IFSCCode, new { @class = "form-control form-control-lg", @Placeholder = "IFSC Code" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Bank Address  </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.BankAddress, new { @class = "form-control form-control-lg", @Placeholder = "Bank Address" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">TAN NO </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.TANNO, new { @class = "form-control form-control-lg", @Placeholder = "TAN NO" })
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">TIN NO </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.TINNO, new { @class = "form-control form-control-lg", @Placeholder = "TIN NO" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">CIN NO  </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.CINNO, new { @class = "form-control form-control-lg", @Placeholder = "CIN NO" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">STAX NO </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.STAXNO, new { @class = "form-control form-control-lg", @Placeholder = "STAX NO" })
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>


                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">PAN NO</label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.PANNO, new { @class = "form-control form-control-lg", @Placeholder = "PAN NO" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">GSTIN  </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.GSTIN, new { @class = "form-control form-control-lg", @Placeholder = "GSTIN" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">Adhaar Number </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.AdhaarNo, new { @class = "form-control form-control-lg", @Placeholder = "Adhaar Number" })
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">ID Type</label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.IDType, new { @class = "form-control form-control-lg", @Placeholder = "ID Type" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">ID Number  </label>
                                            <div class="col-md-9">
                                                @Html.TextBoxFor(m => m.IDNumber, new { @class = "form-control form-control-lg", @Placeholder = "ID Number" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="control-label text-right col-md-3">ID Image </label>
                                            <div class="col-md-9">
                                                <input type="file" name="postedFile" />
                                            </div>
                                        </div>
                                    </div>

                                    <!--/span-->
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                @if (Model.CompanyId != null)
                                                {
                                                    <input type="submit" value="Update Customer" class="btn btn-success" name="UpdateCustomer" onclick="return validatecustomer();" />
                                                }
                                                else
                                                {
                                                    <input type="submit" value="Save Customer" class="btn btn-success" name="SaveCustomer" onclick="return validatecustomer();" />
                                             
                                                    <a href="/Customer/AddCustomer" class="btn btn-dark">Reset</a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6"></div>
                                </div>
                            </div>




                        </div>


                    </div>
                </div>
            </div>


        </div>
    }

</div>
<script>


    function isNumber(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }


    function validatecustomer() {
        $(".errortext").removeClass("errortext");
        if ($('#CompanyName').val() == '') {
            $("#CompanyName").addClass('errortext');
            $('#CompanyName').focus();
            return false;
        }
        if ($('#MobileNo').val() == '') {
            $("#MobileNo").addClass('errortext');
            $('#MobileNo').focus();
            return false;
        }
        if ($('#PhoneNo').val() == '') {
            $("#PhoneNo").addClass('errortext');
            $('#PhoneNo').focus();
            return false;
        }
        if ($('#Email').val() == '') {
            $("#Email").addClass('errortext');
            $('#Email').focus();
            return false;
        }
        if ($('#Pincode').val() == '') {
            $("#Pincode").addClass('errortext');
            $('#Pincode').focus();
            return false;
        }
        if ($('#Address').val() == '') {
            $("#Address").addClass('errortext');
            $('#Address').focus();
            return false;

        }




    }
    function getstatecity() {

        $.ajax({
            url: "/Master/GetStateCity",
            Type: "Get",
            DataType: "JSON",
            data: { PinCode: $("#Pincode").val() },
            success: function (data) {
                if (data.Result == "1") {
                    $("#StateName").val(data.StateName);
                    $("#City").val(data.City);
                }
                else {
                    $("#StateName").val('');
                    $("#City").val('');
                    $("#PinCode").val('');
                    alert('Invalid PinCode');
                    $('#PinCode').focus();


                }


            }

        });
    }

</script>


