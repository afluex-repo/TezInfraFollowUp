@model TejInfraFollowUp.Models.EmployeeProspect

@{
    ViewBag.Title = "GetEmployeeProspectList";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}
<div class="main-wrapper">

    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title"></h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Employee </a></li>
                            <li class="breadcrumb-item active" aria-current="page">Employee List </li>
                        </ol>
                    </nav>
                </div>
            </div>

        </div>
    </div>
    @using (Html.BeginForm("GetEmployeeProspectList", "EmployeeProspect", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
    {
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background: url(../../assets/images/big/auth-bg.jpg) no-repeat center center;min-height: 55vh;display: table-cell;">
            <div class="auth-box" style="max-width:1286px;margin:2%">
                <div id="loginform">
                    <div class="logo">

                        <p class="font-medium m-b-20" style="color:red">@TempData["EmployeeDelete"]</p>
                    </div>
                </div>
                <br />
                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Contact Person</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control form-control-lg", @Placeholder = "Contact Person" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Contact Number </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control form-control-lg", @Placeholder = "Contact Number" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Company Name</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control form-control-lg", @Placeholder = "Company Name" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-9">
                                <input type="submit" value="Get Details" class="btn btn-primary" name="GetDetails" id="GetDetails" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-12">


                        <div class="table-responsive">

                            <table id="file_export" class="table table-striped table-bordered display">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>Contact Person</th>
                                        <th>Contact EmailID</th>
                                        <th>Contact Number</th>
                                        <th>Industry Category</th>
                                        <th>Company Name</th>
                                        <th>Company Contact Number</th>
                                        <th>Address</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstProcpect != null)
                                        {
                                            foreach (var item in Model.lstProcpect)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="/EmployeeProspect/EmployeeProspect?Pk_ProcpectId=@item.Pk_ProcpectId" class="label label-primary">Edit</a>
                                                        &nbsp;
                                                        <a href="/EmployeeProspect/DeleteProspect?Pk_ProcpectId=@item.Pk_ProcpectId" onclick="return confirm('Sure you want to delete this Service ?');" class="label label-danger">Delete</a>
                                                    </td>
                                                    <td>@item.ContactPerson</td>
                                                    <td>@item.ContactEmailId</td>
                                                    <td>@item.ContactNo</td>
                                                    <td>@item.Fk_IndustryCategoryId</td>
                                                    <td>@item.CompanyName</td>
                                                    <td>@item.CompanyContactNo</td>
                                                    <td>@item.Address</td>

                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    }
</div>
