@model TejInfraFollowUp.Models.EmployeeProspect

@{
    ViewBag.Title = "EmployeeProspect";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}

<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #f5c1cb !important;
    }
</style>
<div class="main-wrapper">

    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title"></h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Prospect</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Prospect</li>
                        </ol>
                    </nav>
                </div>
            </div>

        </div>
    </div>
    @using (Html.BeginForm("EmployeeProspect", "EmployeeProspect", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
    {

        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background: url(../../assets/images/big/auth-bg.jpg) no-repeat center center;min-height: 55vh;display: table-cell;">
            <div class="auth-box" style="max-width:1286px;margin:2%">
                <div id="loginform">
                    <div class="logo">

                        <p class="font-medium m-b-20" style="color:red"> @TempData["ProcpectError"]</p>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Contact Person <span style="color: red">*</span></label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control form-control-lg", @placeholder = "Contact Person" })
                                @Html.HiddenFor(m => m.Pk_ProcpectId)
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Contact EmailId </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.ContactEmailId, new { @class = "form-control form-control-lg", @Placeholder = "Contact EmailId" })

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Contact No <span style="color: red">*</span></label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control form-control-lg", @Placeholder = "Enter Contact No.", @onkeypress = "return isNumber(event)", @maxlength = "10" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
                <div class="row">

                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Industry CategoryId  <span style="color: red">*</span></label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.Fk_IndustryCategoryId, new SelectList(ViewBag.ddlcategory, "value", "text"), new { @class = "form-control form-control-lg" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Company Name <span style="color: red">*</span></label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control form-control-lg", @Placeholder = "Company Name" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Company Contact No <span style="color: red">*</span></label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.CompanyContactNo, new { @class = "form-control form-control-lg", @Placeholder = "Company ContactNo.", @onkeypress = "return isNumber(event)", @maxlength = "10" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->

                <div class="row">

                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Address  <span style="color: red">*</span></label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control form-control-lg", @Placeholder = " Address", })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Pincode <span style="color: red">*</span></label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control form-control-lg", @Placeholder = "Pincode", @onchange = "return getstatecity()", @onkeypress = "return isNumber(event)", @maxlength = "6" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">State</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.State, new { @class = "form-control form-control-lg", @Placeholder = "State", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <div class="row">

                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">City</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control form-control-lg", @Placeholder = " City", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Designation <span style="color: red">*</span></label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Designation, new { @class = "form-control form-control-lg", @Placeholder = "Designation" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">WebSite</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.WebSite, new { @class = "form-control form-control-lg", @Placeholder = "WebSite" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>

                <div class="row">

                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">SkypeId</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.SkypeId, new { @class = "form-control form-control-lg", @Placeholder = "SkypeId", })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">FacebookId</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.FacebookId, new { @class = "form-control form-control-lg", @Placeholder = "FacebookId" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">TwitterId</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.TwitterId, new { @class = "form-control form-control-lg", @Placeholder = "TwitterId" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>

                <div class="row">

                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">LinkedInId </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.LinkedInId, new { @class = "form-control form-control-lg", @Placeholder = "LinkedInId", })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">ApproximateEmployee</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.ApproximateEmployee, new { @class = "form-control form-control-lg", @Placeholder = "Approximate Employee" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Approximate Company TurnOver</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.ApproximateCompanyTurnOver, new { @class = "form-control form-control-lg", @Placeholder = "Approximate Company TurnOver", @onkeypress = "return isNumber(event)" })
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>
                @if (Model.Pk_ProcpectId == null)
                {
                    <div id="divhide">
                        <div class="row">

                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">FirstInstruction Date<span style="color: red">*</span></label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.FirstInstructionDate, new { @class = "form-control form-control-lg", @Placeholder = "First Instruction Date" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Expected Product Category<span style="color: red">*</span></label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.Fk_ExpectedProductCategoryId, new SelectList(ViewBag.ddlExpected, "Value", "text"), new { @class = "form-control form-control-lg", @Placeholder = "Expected Product CategoryId" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Source <span style="color: red">*</span></label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.Fk_SourceId, new SelectList(ViewBag.ddlSource, "Value", "text"), new { @class = "form-control form-control-lg", @Placeholder = "SourceId", })
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>

                        <div class="row">

                            <!--/span-->

                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Executive Name  <span style="color: red">*</span></label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.Fk_ExecutiveId, new SelectList(ViewBag.ddlExecutive, "Value", "text"), new { @class = "form-control form-control-lg", @Placeholder = "ExecutiveId" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Mode of InterAction <span style="color: red">*</span></label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.Fk_ModeInterActionId, new SelectList(ViewBag.ddlInteraction, "Value", "text"), new { @class = "form-control form-control-lg" })
                                        @Html.HiddenFor(m => m.PK_InterActionId)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">FollowUp Date <span style="color: red">*</span></label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.FollowupDate, new { @class = "form-control form-control-lg", @Placeholder = "FollowUp Date", })
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>

                        <div class="row">

                            <!--/span-->

                            <div class="col-md-4">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">Description</label>
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control form-control-lg", @Placeholder = "Description" })
                                    </div>
                                </div>
                            </div>

                            <!--/span-->
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                @if (Model.Pk_ProcpectId != null)
                                {
                                    <input type="submit" value="Update " class="btn btn-success" name="btnUpdate" id="btnUpdate" onclick="return validateupdate();" />

                                }
                                else
                                {

                                    <input type="submit" value="Save " class="btn btn-success" name="btnSave" id="btnSave" onclick="return validateservice();" />

                                    <a href="/Procpect/Procpect" class="btn btn-dark">Reset</a>
                                }

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    }
</div>


<script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>

<script>
    // Date Picker
    jQuery('.mydatepicker, #datepicker, .input-group.date').datepicker(
        {
            dateFormat: 'dd/mm/yy',

            changeYear: true,
            changeMonth: true

        });

</script>
<script>

    function getstatecity() {

        $.ajax({
            url: "/EmployeeProspect/GetStateCity",
            Type: "Get",
            DataType: "JSON",
            data: { PinCode: $("#Pincode").val() },
            success: function (data) {
                if (data.Result == "1") {
                    $("#State").val(data.State);
                    $("#City").val(data.City);
                }
                else {
                    $("#State").val('');
                    $("#City").val('');
                    $("#PinCode").val('');
                    alert('Invalid PinCode');
                    $('#PinCode').focus();


                }


            }

        });
    }
    function isNumber(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }


    function validateservice() {
        $(".errortext").removeClass("errortext");
        if ($('#ContactPerson').val() == '') {
            $("#ContactPerson").addClass('errortext');
            $('#ContactPerson').focus();
            return false;
        }
        if ($('#ContactNo').val() == '') {
            $("#ContactNo").addClass('errortext');
            $('#ContactNo').focus();
            return false;
        }
        if ($('#Fk_IndustryCategoryId').val() == '0') {
            $("#Fk_IndustryCategoryId").addClass('errortext');
            $('#Fk_IndustryCategoryId').focus();
            return false;
        }
        if ($('#CompanyName').val() == '') {
            $("#CompanyName").addClass('errortext');
            $('#CompanyName').focus();
            return false;
        }
        if ($('#CompanyContactNo').val() == '') {
            $("#CompanyContactNo").addClass('errortext');
            $('#CompanyContactNo').focus();
            return false;
        }
        if ($('#Address').val() == '') {
            $("#Address").addClass('errortext');
            $('#Address').focus();
            return false;
        }
        if ($('#Pincode').val() == '') {
            $("#Pincode").addClass('errortext');
            $('#Pincode').focus();
            return false;
        }
        if ($('#Designation').val() == '') {
            $("#Designation").addClass('errortext');
            $('#Designation').focus();
            return false;
        }
        if ($('#FirstInstructionDate').val() == '') {
            $("#FirstInstructionDate").addClass('errortext');
            $('#FirstInstructionDate').focus();
            return false;
        }


        if ($('#Fk_ExpectedProductCategoryId').val() == '0') {
            $("#Fk_ExpectedProductCategoryId").addClass('errortext');
            $('#Fk_ExpectedProductCategoryId').focus();
            return false;
        }
        if ($('#Fk_SourceId').val() == '0') {
            $("#Fk_SourceId").addClass('errortext');
            $('#Fk_SourceId').focus();
            return false;
        }
        if ($('#Fk_ExecutiveId').val() == '0') {
            $("#Fk_ExecutiveId").addClass('errortext');
            $('#Fk_ExecutiveId').focus();
            return false;
        }
        if ($('#Fk_ModeInterActionId').val() == '0') {
            $("#Fk_ModeInterActionId").addClass('errortext');
            $('#Fk_ModeInterActionId').focus();
            return false;
        }
        if ($('#FollowupDate').val() == '') {
            $("#FollowupDate").addClass('errortext');
            $('#FollowupDate').focus();
            return false;
        }

        return true;
    }


    function validateupdate() {
        $(".errortext").removeClass("errortext");
        if ($('#ContactPerson').val() == '') {
            $("#ContactPerson").addClass('errortext');
            $('#ContactPerson').focus();
            return false;
        }

        if ($('#ContactNo').val() == '') {
            $("#ContactNo").addClass('errortext');
            $('#ContactNo').focus();
            return false;
        }
        if ($('#Fk_IndustryCategoryId').val() == '0') {
            $("#Fk_IndustryCategoryId").addClass('errortext');
            $('#Fk_IndustryCategoryId').focus();
            return false;
        }
        if ($('#CompanyName').val() == '') {
            $("#CompanyName").addClass('errortext');
            $('#CompanyName').focus();
            return false;
        }
        if ($('#CompanyContactNo').val() == '') {
            $("#CompanyContactNo").addClass('errortext');
            $('#CompanyContactNo').focus();
            return false;
        }
        if ($('#Address').val() == '') {
            $("#Address").addClass('errortext');
            $('#Address').focus();
            return false;
        }
        if ($('#Pincode').val() == '') {
            $("#Pincode").addClass('errortext');
            $('#Pincode').focus();
            return false;
        }
        if ($('#Designation').val() == '') {
            $("#Designation").addClass('errortext');
            $('#Designation').focus();
            return false;
        }
        if ($('#FirstInstructionDate').val() == '') {
            $("#FirstInstructionDate").addClass('errortext');
            $('#FirstInstructionDate').focus();
            return false;
        }

        return true;
    }

    $('#FollowupDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });
    $('#FirstInstructionDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });



</script>