@model TejInfraFollowUp.Models.Master

@{
    ViewBag.Title = "DataSourceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title"></h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Masters</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Data Source List </li>
                        </ol>
                    </nav>
                </div>
            </div>

        </div>
    </div>
    @using (Html.BeginForm("DataSourceList", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
    {

        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background: url(../../assets/images/big/auth-bg.jpg) no-repeat center center;min-height: 55vh;display: table-cell;">
            <div class="auth-box" style="max-width:1286px;margin:2%">
                <div id="loginform">
                    <div class="logo">

                        <p class="font-medium m-b-20" style="color:red">@TempData["Delete"]
                        @TempData["Category"]
                        </p>
                    </div>
                </div>
                <br />
                <div class="table-responsive">
                    <table id="file_export" class="table table-striped table-bordered display">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Source Name</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                                    {
                                        if (Model.lstSource != null)
                                        {
                                            foreach (var item in Model.lstSource)
                                            {
                                    <tr>
                                        @Html.HiddenFor(m => m.Pk_SourceId)
                                        <td>
                                            <a href="/Master/DataSourceMaster?Pk_SourceId=@item.Pk_SourceId" class="btn btn-outline-success">Edit</a>
                                            <a href="/Master/DeleteDataSource?Id=@item.Pk_SourceId" class="btn btn-outline-danger">Delete</a>
                                            &nbsp;

                                        </td>

                                        <td>@item.SourceName</td>



                                    </tr>
                                            }
                                        }
                                    }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    }

</div>

