@model TejInfraFollowUp.Models.Master

@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title"></h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Masters</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Service List</li>
                        </ol>
                    </nav>
                </div>
            </div>

        </div>
    </div>
    @using (Html.BeginForm("ServiceList", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
    {
        <div class="alert alert-success" style="display:@ViewBag.saverrormsg">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span> </button>
            <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["ServiceDelete"]</h5>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">HSN Code </label>
                                    <div class="col-md-9">
                                         @Html.TextBoxFor(m => m.HSNCode, new { @class = "form-control form-control-lg", @Placeholder = "HSN Code" })
                                    </div>
                                </div>
                            </div>
                              <div class="col-md-3">
                                <div class="form-group row">

                                    <div class="col-md-9">
                                        <input type="submit" value="Get Details" class="btn btn-primary" name="GetDetails" />

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                           
                            <!--/span-->
                        </div>
                        
                        <div class="table-responsive">
                            <table id="file_export" class="table table-striped table-bordered display">
                                <thead>
                                    <tr>
                                         <th>Action</th>
                                        <th>Service Name</th>
                                        <th>HSN Code</th>
                                       
                                        <th>CGST</th>
                                        <th>IGST</th>
                                        <th>SGST</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstSites != null)
                                        {
                                            foreach (var item in Model.lstSites)
                                            {
                                        <tr>
                                             <td>
                                                <a href="/Master/ServiceMaster?ServiceId=@item.ServiceId" class="label label-primary">Edit</a>
                                                &nbsp;
                                             <a href="/Master/DeleteService?ServiceId=@item.ServiceId" onclick="return confirm('Sure you want to delete this Service ?');" class="label label-danger">Delete</a>
                                            </td>
                                            <td>@item.ServiceName</td>
                                            <td>@item.HSNCode</td>
                                            <td>@item.CGST</td>
                                            <td>@item.IGST</td>
                                            <td>@item.SGST</td>
                                          
                                        </tr>
                                            }
                                        }
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                           <th>Action</th>
                                        <th>Service Name</th>
                                        <th>HSN Code</th>
                                       
                                        <th>CGST</th>
                                        <th>IGST</th>
                                        <th>SGST</th>
                                      
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
